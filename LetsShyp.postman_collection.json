        {
          "name": "Create Order (Express - Within Range)",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"pickupLocation\": {\"x\": 10, \"y\": 10},\n  \"dropLocation\": {\"x\": 20, \"y\": 20},\n  \"deliveryType\": \"Express\",\n  \"packageDetails\": \"Small parcel, 2kg\"\n}"
            },
            "url": {
              "raw": "http://localhost:3000/api/orders",
              "protocol": "http",
              "host": ["localhost"],
              "port": "3000",
              "path": ["api", "orders"]
            },
            "description": "Creates an Express order within 15 units of available couriers. Should auto-assign nearest courier."
          },
          "response": []
        },
